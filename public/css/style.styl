district-font = 'Josefin Sans', sans-serif;
district-red = #ca221f;


body
  background: rgba(0,0,0,0.03);
  font-size: 16px;
  padding-top: 0;
  position: relative;

.footer
  background: district-red;
  color: white;
  font-family: district-font;
  font-size: 24px;
  font-style: italic;
  font-weight: 700;
  padding: 40px;
  position: absolute;
  width: 100%;

  a
    color: white;

h1
  font-family: district-font;
  font-size: 72px;
  font-style: italic;
  font-weight: 700;
  margin: 0;
  -webkit-text-stroke: 1px white;

iframe
  float: left;
  padding-bottom: 10px;
  padding-right: 10px;

.inner
  margin: 0 auto;
  max-width: 980px;
  width: 100%;

.row
  margin: 0;
  text-align: center;

.header
  background: #ca221f;
  color: white;
  padding: 20px 20px 0 20px;

  .nav
    margin: 0 auto;
    max-width: 950px;

  a
    color: white;
    text-decoration: none;

.container
  background: white;
  min-height: 800px;
  max-width: 980px;
  padding: 15px;
  padding-bottom: 50px;

  h1
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 48px;
    font-style: inherit;
    padding-bottom: 15px;
    -webkit-text-stroke: 0;

.hero
  padding-bottom: 20px;
  position: relative

  label
    display: inline;
    margin-right: 30px;

.content
  border: 1px solid #eee;
  float: left;
  margin: 0 auto 10px 10px;
  max-width: 307px;
  min-height: 272px;
  padding: 10px;
  position: relative;
  text-align: left;
  vertical-align: top;
  width: 100%;

  &:nth-of-type(3n+1)
    margin-left: 0

  h2, h3, h4, h5, h6
    margin: 5px 0;

  h2
    font-size: 18px;
  h3
    font-size: 16px;

  img
    position: absolute;
    min-height: 100%;
    width: 100%;

  .content--top
    display: block;
    height: 120px;
    margin-bottom: 10px;
    overflow: hidden;
    position: relative;

  .content--main
    display: block;
    vertical-align: top;

  .row--link
    background: district-red;
    bottom: 0;
    color: white;
    font-family: district-font;
    font-size: 28px;
    font-style: italic;
    font-weight: 700;
    margin: 15px 0 10px 0;
    padding-top: 10px;
    position: absolute;
    text-align: center;
    width: 93%;

    a
      color: white;

  .tag--top-right
    background: rgba(255,255,255, 1);
    border-bottom: 1px solid white;
    border-left: 1px solid white;
    color: white;
    font-weight: bold;
    padding: 2px 10px;
    position: absolute;
    right: 10px;
    top: 10px;

  .DC
    background: district-red;
  .VA
    background: #002a79;
  .MD
    background: #ffd51a;
    color: black;

.content--show
  border-bottom: 10px solid district-red;
  height: 200px;
  margin-bottom: 20px;
  overflow: hidden;
  padding-bottom: 20px;
  position: relative;

  img
    float: left;
    padding-right: 20px;

  h2, h3
    margin-top: 0;

  .row--link
    background: district-red;
    bottom: 0;
    color: white;
    font-family: district-font;
    font-size: 28px;
    font-style: italic;
    font-weight: 700;
    height: 50px;
    margin-top: 0px;
    padding-top: 10px;
    position: absolute;
    right: 0;
    text-align: center;
    top: 0;
    width: 200px;


