district-font = 'Josefin Sans', sans-serif;
district-red = #ca221f;


body
  background: rgba(0,0,0,0.03);
  padding-top: 0;
  position: relative;

.footer
  background: district-red;
  color: white;
  font-family: district-font;
  font-size: 24px;
  font-style: italic;
  font-weight: 700;
  padding: 40px;
  position: absolute;
  width: 100%;

  a
    color: white;

h1
  font-family: district-font;
  font-size: 72px;
  font-style: italic;
  font-weight: 700;
  margin: 0;
  -webkit-text-stroke: 1px white;

.inner
  margin: 0 auto;
  max-width: 980px;
  width: 100%;
  padding: 0 10px 10px 20px;

.header
  background: #ca221f;
  border-top: 20px solid white;
  color: white;
  padding: 20px 20px 0 20px;

.container
  background: white;
  margin-bottom: 50px;
  max-width: 980px;
  padding-top: 20px;
  width: 100%;

.row
  padding: 10px;

.content
  border: 1px solid #eee;
  display: inline-block;
  margin: 0 auto 10px 10px;
  padding: 10px;
  max-width: 300px;
  vertical-align: top;
  width: 100%;

  &:nth-of-type(3n+1)
    margin-left: 0

  h2, h3, h4, h5, h6
    margin: 5px 0;

  h2
    font-size: 18px;
  h3
    font-size: 16px;

  img
    position: absolute;
    top: -30px;
    width: 300px;

  .content--top
    display: block;
    height: 120px;
    margin-bottom: 10px;
    overflow: hidden;
    position: relative;

  .content--main
    display: block;
    vertical-align: top;
