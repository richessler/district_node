extends layout

block content
  div.inner
    div.container
      for event in data
        h1
          = event.title
        div.content--top.content--show
          img(src=event.image)
          h2
            a(href="/venue/#{event.venue_id}")
              i.fa.fa-university &nbsp;
              = event.venue_name
          h3
            i.fa.fa-calendar-o &nbsp;
            = event.day + ' '
            = event.date + ' '
          h3
            i.fa.fa-clock-o
            =event.time
          a(href=event.seatgeek_url, target="blank", class="event-link")
            if event.eventStatus != 'Sold Out'
              div.row--link
                =event.price
            else
              div.row--link.sold-out
                =event.eventStatus
        p !{event.description}
