extends layout

block content
  div.inner
    div.container
      div.hero
      div.row
        for event in data
          div(class="content" id="#{event.event_id}")
            div.content--top
              a(href="/event/#{event.event_id}/#{event.slug}")
                img(src=event.image)
            div.content--main
              h2
                =event.short_title
              h3
                =event.date
              a(href=event.seatgeek_url, target="blank", class="event-link")
                if event.eventStatus != 'Sold Out'
                  div.row--link
                    Buy Tickets
                else
                  div.row--link.sold-out
                    =event.eventStatus



