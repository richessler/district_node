extends layout

block content
  div.inner
    div.container
      div.hero
        h1
          =venue_name
        h2
          a(href="http://www.google.com/maps?q=#{venue_name} #{venue_address}" target="_blank")
            i.fa.fa-map-marker &nbsp;
              =venue_address
        p
          =venue_blurb
      div.row
        for event in data
          div(class="content content--venue" id="#{event.event_id}")
            div.content--top
              a(href="/event/#{event.event_id}/#{event.slug}")
                img(src=event.image)
            div.content--main
              h2
                =event.short_title
              h3
                i.fa.fa-calendar-o &nbsp;
                =event.day + ' '
                =event.date
              h4
                i.fa.fa-clock-o
                =event.time
              a(href=event.seatgeek_url, target="blank", class="event-link")
                if event.eventStatus != 'Sold Out'
                  div.row--link
                    Buy Tickets
                else
                  div.row--link.sold-out
                    =event.eventStatus



