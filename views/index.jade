extends layout

block content
  div.header
    div.nav
      h1 theDistrict.in
  div.inner
    div.container
      div.hero
        h2 Happen.in Today
      div.row
        for event in data
          div.content
            div.content--top
              img(src=event.image)
            div.content--main
              h2
                =event.short_title
              h3
                =event.venue_name
              span(class='tag--top-right #{event.state}')
                =event.state
              a(href=event.seatgeek_url, target="blank", class="event-link")
                div.row--link
                  Buy Tickets



